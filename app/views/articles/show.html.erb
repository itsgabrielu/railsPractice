<p class='title_focus'>
  <b> <%= @article.title %> </b>
<br>
  <%= @article.text %>
</p>

<h3>Comments (<%= @article.comments.length %>)</h3>
<%= render @article.comments %>

<hr>
<h2>Add comment</h2>
<%= render 'comments/form' %>

<ul>
  <li><%= link_to 'Edit', edit_article_path, class: 'nav_link'  %></li>
  <li><%= link_to 'Back', articles_path, class: 'nav_link' %></li>
</ul>
