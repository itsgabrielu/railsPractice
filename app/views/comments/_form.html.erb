<div class='form_container'>
<%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>
  <p>
    <%= form.text_field :commenter, placeholder: 'Name', class: 'input' %>
  </p>
  <p>
    <%= form.text_area(:body, placeholder:'Your response here', size: "500x6", class:'input body_input')%>
  </p>
  <p>
    <%= form.submit "Reply" %>
  </p>
<% end %>
</div>
